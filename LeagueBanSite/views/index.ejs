<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Who Do I Ban?</title>
        <link rel="stylesheet" href="/css/styleIndex.css">
        <link rel="stylesheet" href="/css/mobileview.css"media="(max-width: 600px)">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans|Andada+Pro:400,700,600' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400&family=Walter+Turncoat&display=swap" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    
    <body>
        <div id="header">
            <h1>Enter Your Name</h1> 

            <br>
            <form action="/banPage" method="POST">
                <input placeholder="Summoner Name" name="summonerName">

                <button id="button-search">Search</button>
            </form>
        </div>

        <div class="loader">
            <h1>LOADING <span class="bullets">.</span></h1>
          </div>

        <script type="text/javascript">
            const element = document.getElementById("button-search");
            element.addEventListener("click", function () {
                const loader = document.querySelector(".loader");
                loader.className += " showLoading";
            });
        </script>
    </body>
</html>