</head>
<body>
    <div id="container">
        <div id="header">
            <h1> <%= banChamps.SEOPlayer.summonerName %>'s <s>Dodge</s> Ban List</h1> 
        </div>

        <div id="headerShelf">
            <div id="paraOne" class="parallelogramRed">
                <div class="parallelogramWhite"></div>
            </div>
            <div id="paraTwo" class="parallelogramRed">
                <div class="parallelogramWhite"></div>
            </div>
            <div id="paraThree" class="parallelogramRed">
                <div class="parallelogramWhite"></div>
            </div>
        </div>

        <div id="mostTraumatizingBox" class="box">
            <div class="bannerShadow"></div>
            <div id="mostConsistentBanner" class="banner">
                <div class="bannerWhite">
                    <div class="bannerInner">
                    </div>
                </div>

                <div class="championImageBox">
                    <img src="/img/<%= banChamps.SEOData.championName %>.png" class="championImage">
                </div>

                <h1 class="title">
                    <%= banChamps.SEOData.championName %>
                </h1>

                <h1 style="float:left;margin:auto;padding-left: 3vw;" class="subtitle">Build: </h1>

                <div class="inventory">
                    <figure class="inventoryItem">
                        <% if( banChamps.SEOData.item0 != 0){ %>
                            <img src="img/<%= banChamps.SEOData.item0 %>.png" class="inventoryItemImg" alt="Image 1">
                        <% } else { %>  
                            <div class="emptyItem"></div>
                        <% } %>
                    </figure>
                    <figure class="inventoryItem">
                        <% if( banChamps.SEOData.item1 != 0){ %>
                            <img src="img/<%= banChamps.SEOData.item1 %>.png" class="inventoryItemImg" alt="Image 1">
                        <% } else { %>  
                            <div class="emptyItem"></div>
                        <% } %>
                    </figure>
                    <figure class="inventoryItem">
                        <% if( banChamps.SEOData.item2 != 0){ %>
                            <img src="img/<%= banChamps.SEOData.item2 %>.png" class="inventoryItemImg" alt="Image 1">
                        <% } else { %>  
                            <div class="emptyItem"></div>
                        <% } %>
                    </figure>
                    <figure class="inventoryItem">
                        <% if( banChamps.SEOData.item3 != 0){ %>
