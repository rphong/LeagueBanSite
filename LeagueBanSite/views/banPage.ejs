                        <% } else { %>  
                            <div class="emptyItem"></div>
                        <% }%>
                    </figure>
                    <figure class="inventoryItem">
                        <% if( banChamps.SEOData.item4 != 0){ %>
                            <img src="img/<%= banChamps.SEOData.item4 %>.png" class="inventoryItemImg" alt="Image 1">
                        <% } else { %>  
                            <div class="emptyItem"></div>
                        <% } %>
                    </figure>
                    <figure class="inventoryItem">
                        <% if( banChamps.SEOData.item5 != 0){ %>
                            <img src="img/<%= banChamps.SEOData.item5 %>.png" class="inventoryItemImg" alt="Image 1">
                        <% } else { %>  
                            <div class="emptyItem"></div>
                        <% } %>
                    </figure>
                </div>

                <h2 style="float:left; margin-top:2.5vh; padding:0 2.1vw 0 1.7vw">
                    <%= banChamps.SEOData.kills %>/<%= banChamps.SEOData.deaths %>/<%= banChamps.SEOData.assists %> <hr id="whiteHr">
                    <%= banChamps.SEOKP %>% KP <hr id="whiteHr">
                    <%=banChamps.SEOData.neutralMinionsKilled + banChamps.SEOData.totalMinionsKilled %> (<%= ((banChamps.SEOData.neutralMinionsKilled + banChamps.SEOData.totalMinionsKilled)/banChamps.SEOMatchTime).toFixed(1) %>)
                </h2>

                <br clear="all">

                <h2>
                    You got absolutely destroyed by a <%= banChamps.SEOData.championName %> <%= banChamps.SEOGameNum%> game(s) ago
                </h2>

                <div class="barGraph" id="SEOChampDmg">
                    <h1>Champion Damage</h1>
                    <div class="vertLine"></div>
                    <div class="barContainer">
                        <% if( banChamps.SEOData.totalDamageDealtToChampions > banChamps.SEOPlayer.totalDamageDealtToChampions){ %>
                            <div class="bar " style="width:100%;background-color: rgb(59, 100, 67);"></div>
                        <% } else { %>  
                            <div class="bar " style="width: <%= banChamps.SEOData.totalDamageDealtToChampions / banChamps.SEOPlayer.totalDamageDealtToChampions * 100%>%;background-color: rgb(59, 100, 67);"></div>
                        <% } %>
                    </div>
                    <div class="barContainer">
                        <% if( banChamps.SEOPlayer.totalDamageDealtToChampions > banChamps.SEOData.totalDamageDealtToChampions){ %>
                            <div class="bar " style="width:100%;"></div>
                        <% } else { %>  
                            <div class="bar " style="width: <%= banChamps.SEOPlayer.totalDamageDealtToChampions / banChamps.SEOData.totalDamageDealtToChampions * 100%>%"></div>
                        <% } %>
                    </div>
                </div>

                <div class="barGraph" id="SEOTurretDmg">
                    <h1>Tower Damage</h1>
                    <div class="vertLine"></div>
                    <div class="barContainer">
                        <% if( banChamps.SEOData.damageDealtToTurrets > banChamps.SEOPlayer.damageDealtToTurrets){ %>
                            <div class="bar " style="width:100%;background-color: rgb(59, 100, 67);"></div>
                        <% } else { %>  
                            <div class="bar " style="width: <%= banChamps.SEOData.damageDealtToTurrets / banChamps.SEOPlayer.damageDealtToTurrets * 100%>%;background-color: rgb(59, 100, 67);"></div>
                        <% } %>
                    </div>
                    <div class="barContainer">
                        <% if( banChamps.SEOPlayer.damageDealtToTurrets > banChamps.SEOData.damageDealtToTurrets){ %>
                            <div class="bar " style="width:100%"></div>
                        <% } else { %>  
                            <div class="bar " style="width: <%= banChamps.SEOPlayer.damageDealtToTurrets / banChamps.SEOData.damageDealtToTurrets * 100%>%"></div>
                        <% } %>
                    </div>
                </div>

                <div class="barGraph" id="SEODmgTaken">
                    <h1>Damage Taken</h1>
                    <div class="vertLine"></div>
                    <div class="barContainer">
                        <% if( banChamps.SEOData.totalDamageTaken > banChamps.SEOPlayer.totalDamageTaken){ %>
                            <div class="bar " style="width:100%;background-color: rgb(59, 100, 67);"></div>
                        <% } else { %>  
                            <div class="bar " style="width: <%= banChamps.SEOData.totalDamageTaken / banChamps.SEOPlayer.totalDamageTaken * 100%>%;background-color: rgb(59, 100, 67);"></div>
                        <% } %>
                    </div>
                    <div class="barContainer">
                        <% if( banChamps.SEOPlayer.totalDamageTaken > banChamps.SEOData.totalDamageTaken){ %>
                            <div class="bar " style="width:100%;"></div>
                        <% } else { %>  
                            <div class="bar " style="width: <%= banChamps.SEOPlayer.totalDamageTaken / banChamps.SEOData.totalDamageTaken * 100%>%"></div>
                        <% } %>
                    </div>
                </div>
                
            </div>       
        </div>
        
